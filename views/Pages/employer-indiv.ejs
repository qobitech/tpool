<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('../Templates/head') %>
   <link rel="stylesheet" href="../styles/custom-css/employer-indiv.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">

</head>
<body>
  <!-- Dashboard nav -->
  <%- include('../Templates/header') %>
   <main class="main">
       <!-- the form start here -->
       <form action="">
            <div class="fluid-container form-container " >

                     <div class="container personal-info py-5">
                           <div class="row">
                           <h3 class="form-title">Personal Information</h3>
                           </div>
                           <div class="img-container">
                            <img class="img" src="../../img/Rectangle 76@2x.png" alt="face">
                           </div>
                           <!-- Card premium or free row -->
                           <div class="row">
                              <div class="col-md-6">
                                 <label style="width: 100%;">
                                    <input type="radio" name="product" class="card-input-element" value="trial" checked/>
                          
                                      <div class="card card-input  mb-3" style="height:158px;">
                                        <div class="card-header " ></div>
                                        <div class="card-body">
                                          <h5 class="card-title">3Days Trial </h5>
                                          
                                         </div>
                                      </div>
                                  </label>
                          
                              </div>
                              <div class="col-md-6">
                                 <label style="width: 100%;">
                                    <input type="radio" name="product" class="card-input-element" value="premium" />
                          
                                      <div class="card card-input" style="height:158px;">
                                        <div class="card-header" ></div>
                                        <div class="card-body">
                                          <h5 class="card-title">Premium</h5>
                                          
                                         </div>
                                      </div>
                                  </label>
                          
                              </div>
                                 
                                
                           </div>
                           <!-- Name and last name  for -->
                           <div class="row ">
                              <div class="col-md-6">
                                 <div class="form-group">
                                    <label for="firstname">First Name</label>
                                    <input type="text" class="form-control" id="firstname" placeholder="Jhon" >
                                 </div>
                                 </div>
                                 <div class="col-md-6">
                                 <div class="form-group">
                                    <label for="lasttname">Last Name</label>
                                    <input type="text" class="form-control" id="lastname" placeholder="Doe">
                                 </div>
                                 </div>
                           </div>
                           <!-- email form -->
                              <div class="form-group">
                                 <label for="email">Email</label>
                                 <input type="email" class="form-control" id="email" placeholder="Johndoe@gmail.com">
                              </div>
                              <!-- Country and number phone row -->
                              <div class="row ">
                                 <!-- country -->
                                 <div class="col-md-6">
                                 <div class="form-group">
                                    <label for="country">Country</label>
                                    <select type="text" class="form-control" id="country"  >
                                          <option value="nigeria" selected>Nigeria</option>
                                          <option value="tunisia">Tunisia</option>
                                          <option value="russia">Russia</option>

                                    </select>
                                 </div>
                                 </div>
                                 <!-- phone -->
                                 <div class="col-md-6 mt-3">
                                    <label for="phone">Phone number</label>
                                    <div class="row " id="phone">
                                       
                                       <div class="col-4">
                                          <div class="form-group mt-0">

                                             <input type="tel" class="form-control" id="country-code" placeholder="+234" >
                                          </div>
                                       </div>
                                       <div class="col-8">
                                       <div class="form-group mt-0">
                                          <input type="tel" class="form-control" id="phone-number" >
                                       </div>
                                       </div>
                                    </div>
                                 </div>
                              </div>
                              <!--   Where did you heare about us ? -->
                              <div class="form-group">
                                 <label for="hear">Where did you here about us ?</label>
                                 <select  class="form-control" id="hear" >
                                    <option value="facebook">Facebook</option>
                                    <option value="twitter">Twitter</option>

                                 </select>
                              </div>
                              <!-- input skilss -->
                              <label for="skills">Interested Skills</label>

                              <div class="skills" id="skills"> 
                                 <div class=" mt-2">
                                    <ul class=" m-0 p-0 skills-list d-flex flex-wrap ">
                                       <li>flutter<i class="fa fa-times" aria-hidden="true"></i>
                                       </li>
                                       <li>Php<i class="fa fa-times" aria-hidden="true"></i>
                                       </li>
                                       <li>java<i class="fa fa-times" aria-hidden="true"></i>
                                       </li>
                                    </ul>
                                 </div>

                                    <div class="form-group">
                                     <input class="form-control" type="text" placeholder="Enter interested skills... " style="border: 0;">
                                    </div>
                                    
                                     
                                </div>
                                <div class="d-flex my-5 suggest-skills ">
                                 <h4 class=" mr-3">Suggested Skills</h4>
                                 <p><span>Software testing</span>, <span> HTML</span>, <span> CSS</span>, <span> React</span></p>
                                </div>
                     </div>
             
            </div>
<!-- Social media information forms -->
               <div class="fluid-container form-container">
                        <div class="container social-info   py-5">
                           <h3  class="form-title">Social informations</h3>
                                 <div class="row ">
                                 <div class="col-md-6 px-4">
                                    <div class="form-group">
                                       <label for="facebook">Facebook</label>
                                       <input type="text" class="form-control" id="facebook" placeholder="Enter facebook url">
                                    </div>
                                    </div>
                                    <div class="col-md-6 px-4">
                                       <div class="form-group">
                                          <label for="twitter">Twitter</label>
                                          <input type="text" class="form-control" id="twitter" placeholder="Enter twitter url" >
                                       </div>
                                    </div>
                              </div>
                              <div class="row ">
                                 <div class="col-md-6 px-4">
                                 <div class="form-group">
                                    <label for="linkedin">Linkedin</label>
                                    <input type="text" class="form-control" id="linkedin" placeholder="Enter linkedin url">
                                 </div>
                                 </div>
                                 <div class="col-md-6 px-4">
                                    <div class="form-group">
                                       <label for="googleplus">Google Plus</label>
                                       <input type="text" class="form-control" id="googleplus" placeholder="Enter google plus url" >
                                    </div>
                                 </div>
                              </div>
                        </div>
               </div>
               <div class="row justify-content-center my-5 " >
                  <button type="submit" class="btn " id="btn">Create profile</button>

               </div>
            </form>
     
  </main>
<!-- Dashboard sidebar -->
<%- include('../Templates/footer') %>​
</body>
</html>