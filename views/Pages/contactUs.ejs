<!DOCTYPE html>

<html lang="en">

<head>
    <%- include('../Templates/head') %>

    <link rel="stylesheet" href="styles/custom-css/contact-us.css">
</head>

<body>
    <!-- NAV-BAR -->
    <%- include('../Templates/header') %>

    <!-- Hero section starts here -->
    <div class="hero">
        <div class="container-fluid hero-overlay">
            <h1 class="text text-white text-center mb-0">
                Let's talk about your next hire
            </h1>
            <div class="cards pb-4 d-flex flex-column flex-nowrap flex-md-row mx-md-auto justify-content-md-between">
                <section class="card shadow-sm h-200 mt-5 mt-md-0 flex-even">
                    <div class="card-body d-flex flex-column flex-nowrap justify-content-between align-items-center">
                        <h4 class="card-title talent-text-dark">Admin</h4>
                        <p class="card-text text-center">Suscipit libero pretium nullam
                            potenti.
                            Interdum, blandit phasellus </p>
                        <h6 class="talent-text-dark">
                            Admin@talentpool.com
                        </h6>
                    </div>
                </section>
                <section class="card shadow-sm h-200 mt-5 mt-md-0 flex-even">
                    <div class="card-body d-flex flex-column flex-nowrap justify-content-between align-items-center">
                        <h4 class="card-title talent-text-dark">Head of Interns</h4>
                        <p class="card-text text-center">Suscipit libero pretium nullam
                            potenti.
                            Interdum, blandit phasellus </p>
                        <h6 class="talent-text-dark">
                            Admin@talentpool.com
                        </h6>
                    </div>
                </section>
                <section class="card shadow-sm h-200 mt-5 mt-md-0 flex-even">
                    <div class="card-body d-flex flex-column flex-nowrap align-items-center">
                        <h4 class="card-title talent-text-dark">Our Office</h4>
                        <h4 class="card-text text-center mt-3">Opening soon</h4>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <!-- Hero section ends here -->

    <!-- spacer -->
    <div class="spacer">

    </div>
    <section class="container-fluid mt-5 contact-form">

        <section class="text-center py-4">
            <h5>Feel free to say 'Hello!'</h5>
        </section>

        <div class="row align-items-center justify-content-center">
            <div class="col-lg-6 col-md-8">
                <form id="contact-form">
                    <div class="form-group">
                        <label for="clientName" class="sr-only">Your name</label>
                        <input type="text" class="form-control py-4" id="clientName" placeholder="Your name*">
                    </div>
                    <div class="form-group">
                        <label for="clientEmail" class="sr-only">Your email</label>
                        <input type="email" class="form-control py-4" id="clientEmail" placeholder="Your email*">
                    </div>
                    <div class="form-group">
                        <label for="messageSubject" class="sr-only">Message subject</label>
                        <input type="text" class="form-control py-4" id="messageSubject" placeholder="Subject">
                    </div>
                    <div class="form-group">
                        <label for="message" class="sr-only">Your message</label>
                        <textarea class="form-control py-4" id="message" rows="8" placeholder="Message"></textarea>
                    </div>
                    <div id="error-message" class="text-center my-2"></div>
                    <div id="success-message" class="text-center my-2"></div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-talent btn-lg my-5">Send
                            Message</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <!-- Talk to us form ends here ends  -->

    <%- include('../Templates/footer') %>
    <%- include('../Templates/script') %>

    <script src="js/custom-js/contact.js"></script>

</body>